<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5f9324"
    tools:context="app.caloriecounter.com.caloriecounter.food_detail">

    <ImageView
        android:id="@+id/food_detail_apple"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/apple" />

    <LinearLayout
        android:id="@+id/food_detail_Linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food_detail_apple"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/row_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/food_detail_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:text="Name of Food"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/food_detail_textCals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Calories:"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/food_detail_Calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="250"
            android:textColor="#d41606"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/food_detail_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:text="Consumed on: 05/01/2017" />

        <Button
            android:id="@+id/food_detail_share"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:background="@drawable/circle"
            android:text="Share" />

    </LinearLayout>

</RelativeLayout>
